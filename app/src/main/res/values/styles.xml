<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">@integer/limit_edit_text_max_length</item>
        <item name="android:hint">@string/hint_edit_text</item>
    </style>

    <style name="AppTheme.TextInputEditText" parent="AppTheme" />

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:text">保存</item>
    </style>

</resources>
